<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/SlateGray"
    app:cardCornerRadius="20dp"
    app:cardElevation="50dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <include
            android:id="@+id/layoutChordResult1"
            layout="@layout/layout_chord_picker_result"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <include
            android:id="@+id/layoutChordResult2"
            layout="@layout/layout_chord_picker_result"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/layoutChordResult1"
            app:layout_constraintEnd_toStartOf="@id/layoutChordResult3"
            app:layout_constraintTop_toTopOf="@id/layoutChordResult1"
            app:layout_constraintBottom_toBottomOf="@id/layoutChordResult1"
            />

        <include
            android:id="@+id/layoutChordResult3"
            layout="@layout/layout_chord_picker_result"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/layoutChordResult2"
            app:layout_constraintEnd_toStartOf="@id/layoutChordResult4"
            app:layout_constraintTop_toTopOf="@id/layoutChordResult1"
            app:layout_constraintBottom_toBottomOf="@id/layoutChordResult1"
            />

        <include
            android:id="@+id/layoutChordResult4"
            layout="@layout/layout_chord_picker_result"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/layoutChordResult1"
            app:layout_constraintBottom_toBottomOf="@id/layoutChordResult1"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>